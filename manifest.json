{
    "manifest_version": 3,
    "name": "Fırat OBS Anket Çözücü",
    "version": "3.2.2",
    "description": "Fırat Üniversitesi OBS anketlerini otomatik doldurur. CSP Bypass ve Main World Bridge destekli.",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "*://obs.firat.edu.tr/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://obs.firat.edu.tr/oibs/*"
            ],
            "js": [
                "content_script.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "*://obs.firat.edu.tr/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}